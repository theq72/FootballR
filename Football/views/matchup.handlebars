<!DOCTYPE html>
<html>
  <head>
    <title>Players</title>
      <style>
        h1 {background-color: #9D2D03;
        }
        
    </style>
  </head>
  <body>
  <h1>Matchups</h1>
  <div style="padding-left:16px">
    <h2 class="alignleft">{{username}}'s Lineup</h2>
  </div>

  <table>
    <tr>
      <th>Position</th>
      <th>Player</th>
      <th>Team</th>
      <th>Projected Points</th>
      <th>Points</th>
    </tr>
    {{# each actQB}}
    <tr>
      <th>QB</th>
      <th>{{this.name}}</th>
      <th>{{this.teamAbbr}}</th>
      <th>{{this.weekProjectedPts}}</th>
      <th>{{this.weekPts}}</th>
    {{/each}}
    </tr>
    {{# each actWR}}
    <tr>
      <th>WR</th>
      <th>{{this.name}}</th>
      <th>{{this.teamAbbr}}</th>
      <th>{{this.weekProjectedPts}}</th>
      <th>{{this.weekPts}}</th>
      {{/each}}
    </tr>
    {{# each actRB}}
