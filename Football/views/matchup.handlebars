      <th>RB</th>
      <th>{{this.name}}</th>
      <th>{{this.teamAbbr}}</th>
      <th>{{this.weekProjectedPts}}</th>
      <th>{{this.weekPts}}</th>
      {{/each}}
    </tr>
    {{# each actTE}}
      <tr>
      <th>TE</th>
      <th>{{this.name}}</th>
      <th>{{this.teamAbbr}}</th>
      <th>{{this.weekProjectedPts}}</th>
      <th>{{this.weekPts}}</th>
      {{/each}}
    </tr>
    {{# each actK}}
    <tr>
      <th>K</th>      
      <th>{{this.name}}</th>
      <th>{{this.teamAbbr}}</th>
      <th>{{this.weekProjectedPts}}</th>
      <th>{{this.weekPts}}</th>
      {{/each}}
    </tr>
    {{# each actDEF}}
    <tr>
      <th>DEF</th>      
      <th>{{this.name}}</th>
      <th>{{this.teamAbbr}}</th>
      <th>{{this.weekProjectedPts}}</th>
      <th>{{this.weekPts}}</th>
    {{/each}}
    </tr>
    <tr>
      <th>Total Points</th>
      <th></th>
      <th></th>
      <th></th>
      <th>{{uPoints}}</th>           
    </table>

